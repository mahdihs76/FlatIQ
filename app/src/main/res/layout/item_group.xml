<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:elevation="7dp"
        android:id="@+id/group_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/group_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="40"
                android:scaleType="fitXY"
                android:src="@mipmap/watch_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="60">


                <TextView
                    android:id="@+id/group_name"
                    fontPath="fonts/A.Ghasem.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"

                    android:text="گروه حاج تقی" />

                <RelativeLayout
                    android:id="@+id/location_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/group_name">

                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentRight="true"
                        android:src="@mipmap/location_icon" />


                    <TextView
                        android:id="@+id/group_location"
                        fontPath="fonts/BRoya.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/location_icon"
                        android:text="خیابان ولیعصر پارک ملت"

                        android:textAlignment="center" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/schedule_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location_bar">

                    <ImageView
                        android:id="@+id/schedule_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentRight="true"
                        android:src="@mipmap/watch_icon" />


                    <TextView
                        android:id="@+id/group_schedule"
                        fontPath="fonts/BRoya.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"

                        android:layout_toLeftOf="@+id/schedule_icon"
                        android:text="خیابان ولیعصر پارک ملت"
                        android:textAlignment="center" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/group_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/schedule_bar"
                    android:layout_marginBottom="10dp"
                    android:text="دوچرخه سواری"

                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/group_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/group_field"
                    android:layout_marginBottom="10dp"
                    android:text="تعداد اعضا"

                    android:textAlignment="center" />

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="5" />

</LinearLayout>