<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <android.support.v7.widget.CardView
        android:id="@+id/group_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="90"
        android:elevation="15dp">

        <RelativeLayout
            android:id="@+id/root_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/group_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="40"
                android:scaleType="fitXY"
                android:src="@mipmap/watch_icon" />


            <RelativeLayout
                android:id="@+id/relative_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_image"
                android:layout_weight="60">

                <RelativeLayout
                    android:id="@+id/location_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"

                        android:layout_marginRight="8dp"
                        android:src="@mipmap/location_icon" />


                    <TextView
                        android:id="@+id/group_location"
                        fontPath="fonts/BRoya.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/location_icon"
                        android:text="خیابان ولیعصر پارک ملت"
                        android:textAlignment="center"

                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/schedule_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location_bar">

                    <ImageView
                        android:id="@+id/schedule_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"

                        android:layout_marginRight="8dp"
                        android:src="@mipmap/watch_icon" />


                    <TextView
                        android:id="@+id/group_schedule"
                        fontPath="fonts/BRoya.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/schedule_icon"

                        android:text="خیابان ولیعصر پارک ملت"
                        android:textAlignment="center"
                        android:textSize="17sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/group_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/schedule_bar"
                    android:layout_marginBottom="10dp"
                    android:text="دوچرخه سواری"
                    android:textAlignment="center"

                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/group_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/group_field"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_man_user"
                    android:drawablePadding="4dp"
                    android:paddingLeft="8dp"
                    android:text="تعداد اعضا"
                    android:textAlignment="center"
                    android:textSize="17sp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/group_name"
                fontPath="fonts/YEKAN.TTF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/relative_info"
                android:layout_alignParentRight="true"
                android:paddingRight="16dp"
                android:layout_marginTop="10dp"
                android:text="گروه حاج تقی"
                android:textColor="@color/sefid"
                android:background="@color/transColor"
                android:textSize="30sp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="10" />

</LinearLayout>