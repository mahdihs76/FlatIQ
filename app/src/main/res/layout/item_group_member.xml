<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/member_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/watch_icon" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/member_image" />

    <TextView
        android:id="@+id/member_rating_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member_name"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="امتیاز : "
        android:layout_toLeftOf="@+id/member_image" />

    <TextView
        android:id="@+id/member_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member_name"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/member_rating_title" />

    <RelativeLayout
        android:id="@+id/member_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/member_image"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:foreground="#afafaf" />


</RelativeLayout>